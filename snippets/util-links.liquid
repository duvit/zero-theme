{% assign position = position | default: 'header' %}

<div class="util-links util-links--{{ position }}">
  {% if position == 'header' %}
    <a href="{{ routes.cart_url }}" aria-label="{{ 'a11y.open_cart' | t: default: 'Open cart' }}">
      {{ 'header.cart' | t: default: 'Cart' }}
    </a>
  {% else %}
    <a href="{{ routes.account_login_url }}">
      {{ 'footer.login' | t: default: 'Log in' }}
    </a>
    <a href="{{ routes.search_url }}">
      {{ 'footer.search' | t: default: 'Search' }}
    </a>
  {% endif %}
</div>
