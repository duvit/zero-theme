{%- if variant.compare_at_price > variant.price -%}
  <span class="price price--sale">{{ variant.price | money_without_trailing_zeros }}</span>
  <span class="price--compare">{{ variant.compare_at_price | money_without_trailing_zeros }}</span>
{%- else -%}
  <span class="price">{{ variant.price | money_without_trailing_zeros }}</span>
{%- endif -%}
